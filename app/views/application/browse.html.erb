
<div class="col-md-12 well">
   <ul class="breadcrumb">           
   <li><a href="/browse.html/">Home</a></li>
   <% 0.upto(@entry.split('/').length - 1) do | n | %>
     <li>
         <span class="divider"></span> 
         <a href="/browse.html/<%= @entry_urlencoded.split('/')[0..n].join('/') %>/"><%= @entry.split('/')[n] %></a>
     </li>
   <% end %>
   </ul>
<% @output[:subdirs].each do |subdir| %>
  <div class="row">
    <div class="col-md-1"><img src="http://cdn.stoychev.info/icons/index/dir.png" class="img-responsive" alt="folder icon"/></div>
    <div class="col-md-9"><a href="<%=u subdir %>/"><%= subdir %></a></div>
  </div>
<% end %>

<% @output[:files].each do |file| %>
  <div class="row">
    <div class="col-md-1"><img src="http://cdn.stoychev.info/icons/index/<%= file.split('.')[-1].downcase %>.png" class="img-responsive" alt="<%= file.split('.')[-1].downcase %>" /></div>
    <div class="col-md-9"><a href="<%= music_baseurl + @entry_urlencoded + u(file) %>"><%= file %></a></div>
  </div>
<% end %>
</div>
